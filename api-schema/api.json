  "components": {
    "schemas": {
      "createWindowBody": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "minLength": 3, "maxLength": 50 },
          "start": {
            "type": "string",
            "format": "time",
            "example": "12:00:00"
          },
          "end": { "type": "string", "format": "time", "example": "12:00:00" },
          "days": {
            "type": "array",
            "items": { "type": "integer", "minimum": 0, "maximum": 6 }
          }
        },
        "required": ["name", "start", "end", "days"]
      },
      "getWindowResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "start": {
            "type": "string",
            "format": "time",
            "example": "12:00:00"
          },
          "end": { "type": "string", "format": "time", "example": "12:00:00" },
          "day": { "type": "integer", "minimum": 0, "maximum": 6 }
        },
        "required": ["id", "name", "start", "end", "day"]
      },
      "updateWindowBody": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "minLength": 3, "maxLength": 50 },
          "start": {
            "type": "string",
            "format": "time",
            "example": "12:00:00"
          },
          "end": { "type": "string", "format": "time", "example": "12:00:00" },
          "days": {
            "type": "array",
            "items": { "type": "integer", "minimum": 0, "maximum": 6 }
          }
        }
      },
      "addFeedBody": {
        "type": "object",
        "properties": { "feedId": { "type": "integer" } },
        "required": ["feedId"]
      },
      "feedItem": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "previewImage": { "type": "string", "format": "uri" },
          "previewText": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "source": { "type": "string" }
        },
        "required": ["title", "url", "source"]
      },
      "getFeed": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "url": { "type": "string", "format": "uri" },
          "name": { "type": "string" },
          "feedId": { "type": "string" },
          "feedType": { "type": "string" },
          "connectedAccountId": { "type": "string" }
        },
        "required": ["id", "url", "name"]
      },
      "createFeed": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "example": "https://cprss.s3.amazonaws.com/golangweekly.com.xml"
          },
          "sourceType": { "type": "string", "example": "rss" },
          "sourceName": { "type": "string", "example": "Golang Weekly" }
        },
        "required": ["url", "sourceType"]
      },
      "podcastSearchResponse": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "description": { "type": "string" },
          "image": { "type": "string", "format": "uri" },
          "link": { "type": "string", "format": "uri" }
        },
        "required": ["title", "url", "description", "image", "link"]
      },
      "passLoginBody": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" }
        },
        "required": ["email", "password"]
      },
      "passSignupBody": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" },
          "password2": { "type": "string" }
        },
        "required": ["email", "password", "password2"]
      },
      "meResponse": {
        "type": "object",
        "properties": { "id": { "type": "integer" } },
        "required": ["id"]
      }
    }
  }
}
